<div class="main-sign">
  <div class="main-sign-item">
    <h3 class="pt-5"><span class="title-sign">新規登録画面</span></h3>

    <% if @food_booker.errors.any? %>
      <div id="error_explanation" style="text-align: left;">
        <h5><%= @food_booker.errors.count %>件空欄です</h5>
        <% @food_booker.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </div>
    <% end %>

    <%= form_with model: @food_booker, url: food_booker_registration_path, local: true do |f| %>

      <div class="field my-5">
        <p style="padding-left: 10px"><%= f.label "メールアドレス" %></p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-item" %>
      </div>

      <div class="field my-5">
        <p style="padding-left: 10px"><%= f.label "名前" %></p>
        <%= f.text_field :name, autocomplete: "name", class: "form-item" %>
      </div>

      <div class="field my-5">
        <p style="padding-left: 10px">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        </p>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-item" %>
      </div>

      <div class="field my-5">
        <p style="padding-left: 10px"><%= f.label "パスワード(確認用)" %></p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-item" %>
      </div>

      <div class="actions mb-3">
        <button class="btn btn-outline-success" type="submit">新規登録</button>
      </div>
    <% end %>

    <strong style="text-align: right all: initial;">アカウントをお持ちの方は<%= link_to "こちらから", new_food_booker_session_path %></strong>
  </div>
</div>
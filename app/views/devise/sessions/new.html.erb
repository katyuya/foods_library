<div class="main-sign">
  <div class="main-sign-in-item">
    <h3 class="pt-5"><span class="title-login">ログイン画面</span></h3>

    <%= form_with model: @food_booker, url: new_food_booker_session_path, local: true do |f| %>

      <div class="field my-5">
        <p style="padding-left: 10px"><%= f.label "メールアドレス" %></p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-item" %>
      </div>

      <div class="field my-5">
        <p style="padding-left: 10px"><%= f.label "パスワード" %></p>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-item" %>
      </div>

      <div class="actions mb-3">
        <button class="btn btn-outline-info" type="submit">ログインする</button>
      </div>
    <% end %>

    <strong style="text-align: right padding-bottom: 15px;">新規登録がお済みでない方は<%= link_to "こちらから", new_food_booker_registration_path %></strong>
  </div>
</div>